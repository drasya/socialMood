<main class="wrapper">
    <div class="main" ng-controller="SearchController">
        <div class="main__search">
            <div class="main__search__icon"></div>
            <div class="main__search__triangle main__search__triangle--up"></div>
            <div class="main__search__triangle main__search__triangle--up--white"></div>
            <div class="main__search__options">
                <h2 class="main__search__options__title">Social searcher</h2>
                <div class="main__search__options__item"><input type="checkbox" id="instagram"> <label for="instagram">Instagram</label></div>
                <div class="main__search__options__item"><input type="checkbox" id="twitter"> <label for="twitter">Twitter</label></div>
            </div>
            <input class="main__search__input" type="text" placeholder="Search for your mood.." ng-model="tagName" ng-enter="searchByTag()">
        </div>
        <div class="main__errors">
            <h4 class="main__errors__title" ng-show="showErrors">{{ errorMessage }}</h4>
        </div>
        <div class="main__status" ng-show="showStatus">
            <h4 class="main__status__title">Found {{ statusCount }} items..</h4>
        </div>
        <div class="main__preloader" ng-show="showPreloader"></div>
        <div class="main__results--twitter" ng-show="showTwitter">
            <div class="main__results__item row" ng-repeat="searchResult in searchResults.twitter">
                <div class="main__results__item__user col__1of4 col__left row">
                    <div class="main__results__item__user__ava col__left">
                        <img ng-src="{{ searchResult.profileImage }}">
                    </div>
                    <div class="main__results__item__user__info col__left col__1of2">
                        {{ searchResult.userName }} / <b>@{{ searchResult.screenName }}</b><br/>
                        {{ searchResult.location }}
                    </div>
                </div>
                <div class="main__results__item__text col__3of4 col__right">
                    {{ searchResult.text }}
                </div>
            </div>
        </div>
        <div class="main__results--instagram" ng-show="showInstagram">
            <div ng-repeat="searchResult in searchResults.instagram" class="item item--instagram--{{ searchResult.imageType }}" ng-gate8-masonry>
                <img ng-src="{{ searchResult.image }}">
            </div>
        </div>
    </div>
</main>